groupadd sudoers
useradd -m -p "" -g users -G "adm,audio,floppy,log,network,rfkill,scanner,storage,optical,power,wheel,sudoers" -s /usr/bin/bash user
cp -aT /etc/skel/ /home/user/
cp -aT /usr/share/kovri/ /home/user/.kovri/ || :
# Desktop shortcuts
mkdir -p /home/user/Desktop/ && cp /etc/skel/.local/share/applications/* /home/user/Desktop/
chown -R user /home/user/
systemctl set-default graphical.target
systemctl enable NetworkManager.service